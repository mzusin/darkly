@tailwind base;
@tailwind components;
@tailwind utilities;

* {
    color-scheme: dark;
}

@layer utilities {
    .outline-none {
        outline: none;
    }

    .darkly-main{
        width: calc(100% - 4rem);
    }
}

@media (prefers-reduced-motion: no-preference){
    :root {
        scroll-behavior: smooth;
    }
}
